<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.domain.member.MemberMapper">

    <select id="findByUsername" parameterType="String" resultType="com.example.demo.domain.member.Member">
        SELECT id, name, password
        FROM Member
        WHERE name = #{username}
    </select>

    <select id="findByUserIdAndRoleAndPrivilege" parameterType="Long" resultType="com.example.demo.dto.RolesPrivileges">
        SELECT r1.name AS roleName,r2.name AS privilegeName
        FROM
	      (SELECT *
	  	    FROM security.members_roles m JOIN security.Role r
            ON m.role_id = r.id) r1,
	      (SELECT * FROM security.roles_privileges t JOIN security.Privilege p
            ON t.privilege_id = p.id) r2
        WHERE r1.member_id=#{memberId};
    </select>

    <insert id="save" parameterType="com.example.demo.domain.member.Member" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Member(name,password) VALUES(#{name},#{password})
    </insert>

    <insert id="membersRolesSave">
        INSERT INTO members_roles(member_id,role_id) VALUES(#{memberId},#{roleId})
    </insert>
</mapper>
